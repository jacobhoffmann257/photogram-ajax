
var added_comment = $("<%= escape_javascript(render 'comments/comment', comment: @comment )%>"); //redraws the specified render
//the above line can be shortened to var added_comment = $("<%= j(render @comment) %>");
added_comment.hide();//hides the comment
$("#<%= dom_id(@comment.photo) %>_new_comment_form ").before(added_comment); //draws the render on the page.
added_comment.slideDown();//has it slide down to reveal the comment
$("#<%= dom_id(@comment.photo) %>_new_comment_form #comment_body").val(""); //clears input after use
